{
	"name": "ft-webcomfort",
	"version": "1.0.1",
	"author": "sendhilvelan.randon@france-travail.fr",
	"license": "MIT",
	"main": "dist/ft-webreader.js",
	"types": "types/ft-webreader.d.ts",
	"files": [
		"dist/",
		"types/"
	],
	"scripts": {
		"build": "node build.js --entryFile=ft-webreader.ts",
		"build:prod": "node build.js --entryFile=ft-webreader.ts --prod",
		"build:types": "tsc src/ft-webreader.ts --declaration --declarationDir ./types --emitDeclarationOnly --skipLibCheck --target es2022 --moduleResolution bundler",
		"test": "vitest --environment=happy-dom --coverage",
		"test:ci": "vitest run --environment=happy-dom"
	},
	"vitest": {
		"test": {
			"environment": "jsdom",
			"globals": true
		}
	},
	"devDependencies": {
		"@vitest/coverage-v8": "^3.0.7",
		"esbuild": "0.23.1",
		"esbuild-minify-templates": "^0.11.0",
		"happy-dom": "^17.6.3",
		"jsdom": "^26.1.0",
		"prettier": "3.4.2",
		"vitest": "^3.2.4"
	}
}
