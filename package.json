{
	"name": "ts-test",
	"version": "1.0.0",
	"scripts": {
		"build": "tsc && copyfiles -u 1 src/index.html dist",
		"watch:ts": "tsc --watch",
		"watch:html": "chokidar \"src/index.html\" -c \"copyfiles -u 1 src/index.html dist\"",
		"serve": "live-server dist --open=index.html",
		"dev": "npm-run-all --parallel watch:ts watch:html serve"
	},
	"devDependencies": {
		"chokidar-cli": "^3.0.0",
		"copyfiles": "^2.4.1",
		"live-server": "^1.2.2",
		"npm-run-all": "^4.1.5",
		"typescript": "^5.2.0"
	}
}
